@model IEnumerable<Product>
@{
    ViewData["Title"] = "Productos";
}
<div class="carousel-inner">
    <div class="carousel-item active">
        <img class="d-block w-100" src="https://techbuzzes.com/wp-content/uploads/2018/04/personal-smart-tech.png"
             alt="Banner productos">
    </div>
</div>
<div class="jumbotron">
    <div class="row">
        <div class="col-xs-12 col-md-4 p-2">
            <div class="card text-center p-3">
                <div class="card-img-top pb-1">
                    <svg width="5em" height="5em" viewBox="0 0 16 16" class="bi bi-credit-card-2-back-fill"
                         fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v5H0V4zm11.5 1a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h2a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-2z" />
                        <path d="M0 11v1a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-1H0z" />
                    </svg>
                </div>
                <div class="card-header">
                    <h5 class="m-0">Pagá como quieras</h5>
                </div>
                <div class="card-body">
                    MercadoPago (tarjetas, efectivo, banco) y pagos contrareembolso
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-4 p-2">
            <div class="card text-center p-3">
                <div class="card-img-top pb-1">
                    <svg width="5em" height="5em" viewBox="0 0 16 16" class="bi bi-truck" fill="currentColor"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M0 3.5A1.5 1.5 0 0 1 1.5 2h9A1.5 1.5 0 0 1 12 3.5V5h1.02a1.5 1.5 0 0 1 1.17.563l1.481 1.85a1.5 1.5 0 0 1 .329.938V10.5a1.5 1.5 0 0 1-1.5 1.5H14a2 2 0 1 1-4 0H5a2 2 0 1 1-3.998-.085A1.5 1.5 0 0 1 0 10.5v-7zm1.294 7.456A1.999 1.999 0 0 1 4.732 11h5.536a2.01 2.01 0 0 1 .732-.732V3.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .294.456zM12 10a2 2 0 0 1 1.732 1h.768a.5.5 0 0 0 .5-.5V8.35a.5.5 0 0 0-.11-.312l-1.48-1.85A.5.5 0 0 0 13.02 6H12v4zm-9 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm9 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                    </svg>
                </div>
                <div class="card-header">
                    <h5 class="m-0">Envíos a domicilio</h5>
                </div>
                <div class="card-body">
                    <p class="m-0">Envíos a todo el país a través de OCA, Correo Argentino y Andreani</p>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-4 p-2">
            <div class="card text-center p-3">
                <div class="card-img-top pb-1">
                    <svg width="5em" height="5em" viewBox="0 0 16 16" class="bi bi-shield-check" fill="currentColor"
                         xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                              d="M5.443 1.991a60.17 60.17 0 0 0-2.725.802.454.454 0 0 0-.315.366C1.87 7.056 3.1 9.9 4.567 11.773c.736.94 1.533 1.636 2.197 2.093.333.228.626.394.857.5.116.053.21.089.282.11A.73.73 0 0 0 8 14.5c.007-.001.038-.005.097-.023.072-.022.166-.058.282-.111.23-.106.525-.272.857-.5a10.197 10.197 0 0 0 2.197-2.093C12.9 9.9 14.13 7.056 13.597 3.159a.454.454 0 0 0-.315-.366c-.626-.2-1.682-.526-2.725-.802C9.491 1.71 8.51 1.5 8 1.5c-.51 0-1.49.21-2.557.491zm-.256-.966C6.23.749 7.337.5 8 .5c.662 0 1.77.249 2.813.525a61.09 61.09 0 0 1 2.772.815c.528.168.926.623 1.003 1.184.573 4.197-.756 7.307-2.367 9.365a11.191 11.191 0 0 1-2.418 2.3 6.942 6.942 0 0 1-1.007.586c-.27.124-.558.225-.796.225s-.526-.101-.796-.225a6.908 6.908 0 0 1-1.007-.586 11.192 11.192 0 0 1-2.417-2.3C2.167 10.331.839 7.221 1.412 3.024A1.454 1.454 0 0 1 2.415 1.84a61.11 61.11 0 0 1 2.772-.815z" />
                        <path fill-rule="evenodd"
                              d="M10.854 6.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 8.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                    </svg>
                </div>
                <div class="card-header">
                    <h5 class="m-0">Compra 100% segura</h5>
                </div>
                <div class="card-body">
                    <p class="m-0">Cuidamos tus datos cumpliendo siempre con las leyes de protección de datos</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="d-flex flex-column p-5 m-5">
    <h2 class="main-title text-center">Productos</h2>
    <div class="d-flex flex-wrap justify-content-around py-4">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 p-3">
                    <div class="card card-product">
                        <img class="card-img-top" src="@product.ImageUrl" alt="@product.Title" />
                        <div class="card-body">
                            <h5 class="card-title card-product-title">@product.Title - @product.Sku</h5>
                            <p>Categoria: @product.Category</p>
                            <p>Brand: @product.Brand</p>
                            <p class="card-text card-product-price">@product.Price.-</p>
                            <a href="@Url.Action("Checkout", "Orders", new { id = @product.Id })" class="btn btn-success w-100">Comprar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

