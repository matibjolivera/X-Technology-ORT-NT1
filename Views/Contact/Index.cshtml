@model X_Technology_ORTv2.Models.MailMessage
<!--Section: Contact-->
<section class="mb-4 container">
    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold my-4">Contactanos</h2>
    <!--Section description-->
    <p class="w-responsive mx-auto mb-5">No dudes en contactarnos!</p>

    @if (ViewBag.message != null && ViewBag.message != "" && ViewBag.type != null && ViewBag.type != "")
    {
        <p class="text-@ViewBag.type">@ViewBag.message</p>
    }

    <div class="row">
        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
            <form asp-action="SendMessage">
                <!--Grid row-->
                <div class="row">
                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input asp-for="Name" class="form-control" required />
                            <label asp-for="Name" class="">Nombre</label>
                        </div>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="email" asp-for="Email" class="form-control" required />
                            <label asp-for="Email" class="">Email</label>
                        </div>
                    </div>
                    <!--Grid column-->
                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">
                    <!--Grid column-->
                    <div class="col-md-12">
                        <div class="md-form">
                            <textarea type="text"
                                      asp-for="Message"
                                      rows="2"
                                      class="form-control md-textarea"></textarea>
                            <label asp-for="Message">Mensaje</label>
                        </div>
                    </div>
                </div>
                <!--Grid row-->
                <div class="text-center text-md-left">
                    <input class="submit btn btn-primary" type="submit" value="Submit" />
                </div>
                <div class="status"></div>
            </form>
        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li>
                    <i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>X-Technology</p>
                </li>

                <li>
                    <i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>+ 69 696969696969</p>
                </li>

                <li>
                    <i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>equisteknologi@yaju.com.ar</p>
                </li>
            </ul>
        </div>
        <!--Grid column-->
    </div>
</section>
<!--Section: Contact -->


