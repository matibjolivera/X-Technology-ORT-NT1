@model Microsoft.EntityFrameworkCore.Query.IIncludableQueryable<OrderHeader, Product>

@{
    ViewData["Title"] = "Admin";
}

<h1>Admin</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Referencia
            </th>
            <th>
                Pago total
            </th>
            <th>
                Método de pago
            </th>
            <th>
                Método de envío
            </th>
            <th>
                Datos de facturación
            </th>
            <th>
                Datos de envío
            </th>
            <th>Detalles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Reference
                </td>
                <td>
                    @item.TotalPaid
                </td>
                <td>
                    @item.PaymentMethod
                </td>
                <td>
                    @item.ShippingMethod
                </td>
                <td>
                    @item.Billing.GetData()
                </td>
                <td>
                    @item.Shipping.GetData()
                </td>
                <td>
                    <details>
                        <summary>Detalles</summary>
                        <table>
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Cantidad</th>
                                    <th>Precio unitario</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var orderDetail in item.Details)
                                {
                                    <tr>
                                        <td>@orderDetail.Product.Title</td>
                                        <td>@orderDetail.Quantity</td>
                                        <td>@orderDetail.UnitPrice</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </details>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
